<%- model_class = Manufacturer -%>
<% if current_user.role == User::SERVICE_ADMIN %>
  <%= render 'shared/page_header',
    flash: flash,
    title: 'Service Wide Manufacturer Listing',
    description: "This page will show you a complete listing of
      manufacturers that have been created across the entire system.
      This view is a <em>Service Administrator</em> view and
      should be used with caution. These manufacturers and the records
      associated with each manufacturer maybe shared with user groups
      that you designate."
  %>
<% else %>
  <%= render 'shared/page_header',
    flash: flash,
    title: 'Your Manufacturer List',
    description: "This page will show you a complete listing of
      manufacturers that you have created. These manufacturers and the records
      associated with each manufacturer maybe shared with user groups
      that you manage. If you would like to create a <em>new</em>
      manufacturer, then use the 'New' button at the bottom at the page."
  %>
<% end %>

<div class='row'>
  <div class='12-small columns'>

    <% if @manufacturers.present? %>
      <table class=""full-width"">
        <thead>
          <tr>
            <th width="20%">Name</th>
            <th width="30%">Address</th>
            <th width="20%">Website</th>
            <th width="20%">Main phone</th>
            <th width="20%">Main fax</th>
            <th width="20%">Tags</th>
            <th width="10%"><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @manufacturers.each do |manufacturer| %>
            <tr>
              <td><%= link_to manufacturer.name, manufacturer_path(manufacturer) %></td>
              <td><%= link_to manufacturer.address, manufacturer_path(manufacturer) %></td>
              <td><%= link_to manufacturer.website, manufacturer_path(manufacturer) %></td>
              <td><%= link_to manufacturer.main_phone, manufacturer_path(manufacturer) %></td>
              <td><%= link_to manufacturer.main_fax, manufacturer_path(manufacturer) %></td>
              <td><%= link_to manufacturer.tags, manufacturer_path(manufacturer) %></td>
              <td>
                <%= link_to t('.edit', default: t("helpers.links.edit")),
                            edit_manufacturer_path(manufacturer), class: 'intable-success-button' %>
                <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                            manufacturer_path(manufacturer),
                            method: :delete,
                            data: { confirm: t('.confirm', default: t("helpers.links.confirm",
                              default: 'Are you sure?')) },
                            class: 'intable-delete-button' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>
        No manufacturers have been created yet. Click on the <strong>New</strong>
        button below to create your first one.
      </p>
    <% end %>
  </div>
</div>

<div class='form-actions'>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_manufacturer_path,
            :class => 'success-button' %>
</div>
