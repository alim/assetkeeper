<h1>Contact Us</h1>
<p>
	You can contact us using the form below. If you would like us to
	contact you by phone, please include your phone number.
</p>
<%= render partial: 'shared/flash', locals: { flash: flash } %>
<%= render partial: 'shared/validation_errors' %>

<div class='row-fluid'>
	<%= form_for @contact, :url => home_create_contact_url,
		:html => { :class => 'form-horizontal' }  do |f| %>

		<div class="control-group">
			<%= f.label 'Name:', :class => 'control-label' %>
			<div class="controls">
				<%= f.text_field :name, :class => 'span4' %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label 'Email:', :class => 'control-label' %>
			<div class="controls">
				<%= f.text_field :email, :class => 'span4' %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label 'Phone:', :class => 'control-label' %>
			<div class="controls">
				<%= f.text_field :phone, :class => 'span4' %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label 'Message', :class => 'control-label' %>
			<div class="controls">
				<%= f.text_area :body, rows: 10, class: 'text_area span7' %>
			</div>
		</div>

		<div class="form-actions">
			<%= f.submit 'Submit', :class => 'btn btn-primary' %>
			<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
				          home_support_url, :class => 'btn' %>
		</div>

	<% end %>
</div> <!-- row -->

