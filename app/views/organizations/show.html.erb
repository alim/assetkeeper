<%- model_class = Group -%>
<%= render 'shared/page_header', flash: flash, title: 'User Group', description:
    "The user group definition is shown below. You can update the
    group membership by selecting the <em>Edit</em> button at the
    bottom on the page." %>

<div class="row">
  <div class="small-2 columns">
    <div class="right inline"><strong>Name:</strong></div>
  </div>
  <div class="small-10 columns left">
    <%= @group.name %>
  </div>
</div>

<div class="row">
  <div class="small-2 columns">
    <div class="right inline"><strong>Description:</strong></div>
  </div>
  <div class="small-10 columns left">
    <%= @group.description.html_safe %>
  </div>
</div>

<div class="row">
  <div class="small-2 columns">
    <div class="right inline"><strong>Owner:</strong></div>
  </div>
  <div class="small-10 columns left">
    <%= @owner_email %>
  </div>
</div>
<br/>
<br/>


<div class="row">
  <div class="small-12 columns">
    <h5>Users Associated with the Group</h5>

    <% if @users.present? %>

      <table class="full-width">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Re-invite</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td>
        				<%= form_tag notify_group_url(@group), method: :put do %>
        					<%= hidden_field_tag :uid, user.id %>
        					<%= submit_tag 'Send Invite', class: "intable-info-button" %>
        				<% end %>
        			</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>
        There are no users associated with this group.
      </p>
    <% end %>
  </div>
</div>

<br/>

<div class="row">
  <div class="small-12 columns">

    <h5>Related Resources</h5>

    <% if @resources.present? %>
      <p>
        The resources that are accessible by this group are listed in the
        table below:
      </p>
      <%= render 'resource_list', resources: @resources %>
    <% else %>
      <p>
        There are no resources associated with this group.
      </p>
    <% end %>
  </div>
</div>

<div class="form-actions">
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_group_path(@group), class: 'success-button' %>

  <%= link_to t('.back', default: t("helpers.links.back")),
              groups_path, class: 'cancel-button'  %>

  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              group_path(@group),
              method: 'delete',
              data: { :confirm => t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'delete-button right' %>
</div>
