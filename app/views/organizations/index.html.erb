<%= render partial: 'layouts/admin_side_menu' %>
<%= render partial: 'layouts/admin_devise_nav'%>

<%- model_class = Organization -%>
<%= render 'shared/page_header',
    flash: flash,
    title: 'Organzation - Admin. View',
    description:
    "All organizations in the system are shown below."
%>

<div class="Format-Header1">
<div class='row'>
  <div class="col-xs-12">
    <% if @organizations.present? %>
    	 <table class="table table-striped">
    		<thead>
    		  <tr>
    		    <th>Name</th>
    		    <th>Description</th>
    		    <th>Owner</th>
    		    <th><%=t '.actions', :default => t("helpers.actions") %></th>
    		  </tr>
    		</thead>
    		<tbody>
    		  <% @organizations.each do |organization| %>
    		    <tr>
    		      <td><%= link_to organization.name, organization_path(organization) %></td>
    		      <td><%= organization.description.html_safe %></td>
              <td>
                <% if organization.owner %>
    		          <%= organization.owner_email %>
                <% else %>
                  No owner
                <% end %>
              </td>
    		      	<% if current_user.admin? %>
                 <td>
    					    <%= link_to t('.edit', default: t("helpers.links.edit")),
    					                edit_organization_path(organization), class: 'btn btn-primary' %>
    					    <%= link_to t('.destroy', default: t("helpers.links.destroy")),
    					                organization_path(organization),
    					                method: :delete,
    					                data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
    					                class: 'btn btn-primary', id: 'butn-inline' %>
                 </td>
    		        <% else %>
    		        	No actions allowed
    		        <% end %>
    		      <!--/td-->
    		    </tr>
    		  <% end %>
    		</tbody>
    	</table>
    <% else %>
      <div class='Format-Header'>
       <p>
        No organizations have been created yet. Click on the <strong>New</strong>
        button below to create your first one.
       </p>
     </div>
    <% end %>
  </div>
</div>
<div class='digg_pagination'>
  <%= will_paginate @organizations %>
</div>

<br/>
 <div class="row row-grid" id="shaderow">
   <div class='form-actions' id="alignbutton">
    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_organization_path,
            :class => 'btn btn-primary' %>
  </div>
 </div>
</div>
