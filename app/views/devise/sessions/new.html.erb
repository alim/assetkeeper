<%= render 'shared/page_header',
  flash: flash,
  title: 'Login',
  description: "You can access the service features for registered customers by
        using the login form below. If you do not have an account, you can
        use the <em>Sign up</em> link above."
%>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class='Format-Header'>
  <div class='row'>
    <div class='small-6 columns'>
      <label>Email</label>
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class='row'>
    <div class='small-6 columns'>
      <label>Password</label>
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <div class="form-actions">
        <%= f.submit "Login", class: 'action-button' %>
        <% if devise_mapping.rememberable? -%>
         <div class="small-12 columns">
           <br/>
          <label class='checkbox'>
            <%= f.check_box :remember_me %> Remember my login
          </label>
        </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>

<% end %>
<br/>
<div class='Format-Header'>
 <%= link_to "Forgot your password?", new_password_path(resource_name) %>
</div>
<br/><br/>
