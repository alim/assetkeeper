<%= render 'shared/validation_errors', verrors: verrors  %>

<%= form_for asset_model do |f| %>
    <div class="row">
      
      <div class="small-6 columns">
        <div class="row">
          <div class='small-6 columns'>
            <label>Name</label>
            <%= f.text_field :name %>
          </div>

          <div class='small-6 columns'>
            <label>Material</label>
            <%= f.text_field :material %>
          </div>
        </div>

        <div class="col-sm-6 col-lg-4">
          <div class="form-group">
            <label class="control-label col-md-4">Material</label>
            <div class="col-md-8">
             <%= f.text_field :material, class: 'form-control' %>
            </div>
          </div>
        </div>

          <div class="col-sm-6 col-lg-4">
           <div class="form-group">
            <label class="control-label col-md-4">Organization</label>
           <div class="col-md-8">
             <% if asset_model.organization  %>
              <%= f.text_field(:organization, readonly: true, value: asset_model.organization_name, class: 'form-control') %>
             <% else %>
              <%= f.text_field(:organization, readonly: true, value: "None specified", class: 'form-control') %>
             <% end %>
           </div>
         </div>
        </div>
      </div>

      <div class="row row-grid">
        <div class="col-sm-6 col-lg-4">
          <div class="form-group">
            <label class="control-label col-md-4">Location</label>
            <div class="col-md-8">
             <%= f.text_field :location, class: 'form-control' %>
           </div>
          </div>
        </div>
        <div class="col-sm-6 col-lg-4">
          <div class="form-group">
            <label class="control-label col-md-4">Latitude</label>
            <div class="col-md-8">
             <%= f.text_field :latitude, class: 'form-control' %>
           </div>
        <div class='row'>
          <div class='small-6 columns'>
            <label>Date Installed</label>
            <%= f.text_field :date_installed, value: asset_model.install_date,
              class: 'fdatepicker', placeholder: 'Not installed' %>
          </div>
        </div>


        <div class="col-sm-6 col-lg-4">
          <div class="form-group">
            <label class="control-label col-md-4">Longitude</label>
            <div class="col-md-8">
             <%= f.text_field :longitude, class: 'form-control' %>
           </div>
          </div>
        </div>
      </div>

       <div class="row row-grid">
        <div class="col-sm-4 col-lg-4">
          <div class="form-group">
            <label class="control-label col-md-4">Date Installed</label>
            <div class="col-md-8">
             <%= f.text_field :date_installed, value: asset_model.install_date, class: 'form-control fdatepicker' %>
            </div>
          </div>
        </div>

       <div class="col-sm-6 col-lg-6">
         <div class="form-group">
          <label class="control-label col-xs-12 col-md-2">Description</label>
          <div class="col-md-10">
           <%= f.text_area :description, rows: 10, class: 'form-control' %>
          </div>
         </div>
        </div>

      <!--div class="col-sm-6 col-lg-4">
        <div class="form-group">
         <label class="control-label col-md-4">Tags</label>
         <div class="col-md-8">
          <%= f.text_field :tags, class: 'form-control' %>
         </div>
        </div>
      </div-->
     </div>

     <div class="row row-grid">
      <div class="col-sm-6 col-lg-4">
        <div class="form-group">
         <label class="control-label col-md-4">Part Number</label>
         <div class="col-md-8">
          <%= f.text_field :part_number, class: 'form-control' %>
         </div>
        </div>
       </div>

      <div class="col-sm-6 col-lg-4">
        <div class="form-group">
         <label class="control-label col-md-4">Model Type</label>
         <div class="col-md-8">
          <%= f.text_field :model_type, class: 'form-control' %>
         </div>
        </div>
       </div>

      <div class="col-sm-6 col-lg-4">
        <div class="form-group">
         <label class="control-label col-md-4">Serial Number</label>
         <div class="col-md-8">
          <%= f.text_field :serial_number, class: 'form-control' %>
        </div>
       </div>
      </div>
    </div>

     <div class="row row-grid">
      <div class="col-sm-6 col-lg-4">
        <div class="form-group">
         <label class="control-label col-md-4">Status</label>
         <div class="col-md-8">
          <%= f.select(:status, asset_model.status_choices, class: 'form-control') %>
         </div>
        </div>
       </div>

      <div class="col-sm-6 col-lg-4">
        <div class="form-group">
         <label class="control-label col-md-4">Condition</label>
          <div class="col-md-8">
           <%= f.select(:condition, asset_model.condition_choices, class: 'form-control') %>
          </div>
        </div>
       </div>

      <div class="col-sm-6 col-lg-4">
       <div class="form-group">
        <label class="control-label col-md-4">Failure Probability</label>
        <div class="col-md-8">
         <%= f.select(:failure_probability, asset_model.failure_choices, class: 'form-control') %>
        </div>
       </div>
      </div>
    </div>

     <div class="row row-grid">
      <div class="col-sm-6 col-lg-4">
       <div class="form-group">
        <label class="control-label col-md-4">Failure Consequence</label>
        <div class="col-md-8">
         <%= f.select(:failure_consequence, asset_model.consequence_choices, class: 'form-control') %>
        </div>
       </div>
      </div>
    </div>

    <div class='row'>
      <div class='small-6 columns'>
        <lable>Upload Photos (upto 4)</label>
        <%= f.fields_for :photos do |photo| %>
          <%= photo.file_field :image %><br>
        <% end %>
      </div>
      <div class="col-sm-6 col-lg-4">
        <div class="form-group">
        <label class="control-label col-md-4">Manufacturer</label>
        <div class="col-md-8">
         <%= f.select(:manufacturer_id, asset_model.manufacturer_choices, class: 'form-control') %>
        </div>
       </div>
      <div class="small-3 columns">
        <label>Manufacturer</label>
        <%= f.select(:manufacturer_id, asset_model.manufacturer_choices) %>
      </div>
    </div>
  </form>

  <br/>

 <div class="row row-grid" id="shaderow">
  <div class="form-actions" id="alignbutton">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                asset_items_path, class: 'btn btn-primary' %>
  </div>
</div>
</div>
<% end %>
