<%= render 'shared/validation_errors', verrors: verrors  %>

<%= form_for asset_model do |f| %>
    <div class="row">

      <div class="small-6 columns">
        <div class="row">
          <div class='small-6 columns'>
            <label>Name</label>
            <%= f.text_field :name %>
          </div>

          <div class='small-6 columns'>
            <label>Material</label>
            <%= f.text_field :material %>
          </div>
        </div>

        <div class='row'>
          <div class='small-6 columns'>
            <label>Organization</label>
            <% if asset_model.organization  %>
              <%= f.text_field(:organization, readonly: true, value: asset_model.organization_name) %>
            <% else %>
              <%= f.text_field(:organization, readonly: true, value: "None specified") %>
            <% end %>
          </div>

          <div class='small-6 columns'>
            <label>Location</label>
            <%= f.text_field :location %>
          </div>
        </div>

        <div class='row'>
          <div class='small-6 columns'>
            <label>Latitude</label>
            <%= f.text_field :latitude %>
          </div>

          <div class='small-6 columns'>
            <label>Longitude</label>
            <%= f.text_field :longitude %>
          </div>
        </div>

        <div class='row'>
          <div class='small-6 columns'>
            <label>Date Installed</label>
            <%= f.text_field :date_installed, value: asset_model.install_date, class: 'fdatepicker' %>
          </div>
        </div>

      </div>

      <div class="small-6 columns">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 16 %>
      </div>

       <div class="small-6 columns">
        <%= f.label :tags %>
        <%= f.text_field :tags %>
      </div>

      <div class="small-6 columns">
        <label>Part Number</label>
        <%= f.text_field :part_number %>
      </div>

      <div class="small-6 columns">
        <label>Model Number</label>
        <%= f.text_field :model_type %>
      </div>

      <div class="small-6 columns">
        <label>Serial Number</label>
        <%= f.text_field :serial_number %>
      </div>

    </div>

    <div class="row">

      <div class="small-3 columns">
        <label>Status</label>
        <%= f.select(:status, asset_model.status_choices) %>
      </div>

      <div class="small-3 columns">
        <label>Condition</label>
        <%= f.select(:condition, asset_model.condition_choices) %>
      </div>

      <div class="small-3 columns">
        <label>Failure Probability</label>
        <%= f.select(:failure_probability, asset_model.failure_choices) %>
      </div>

      <div class="small-3 columns">
        <label>Consequence</label>
        <%= f.select(:failure_consequence, asset_model.consequence_choices) %>
      </div>

       <div class="small-3 columns">
        <label>Manufacturer</label>
        <%= f.select(:manufacturer_id, asset_model.manufacturer_choices) %>
      </div>

    </div>


  <div class="form-actions">
    <%= f.submit nil, class: 'success-button' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                asset_items_path, class: 'cancel-button' %>
  </div>
<% end %>
