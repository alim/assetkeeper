<!-- Print out any validation errors - should be in @verrors -->
<% if verrors -%>
  <div data-alert class="alert-box radius warning">
    <h5 class="alert-heading">Error!</h5>
    <ul>
      <% verrors.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <a href="#" class="close">&times;</a>
  </div>
<% end -%>
