  </head>
  <body>

		<%= render 'layouts/admin_devise_nav'%>

    <div class='row'>
      <div class='small-12 smal-offset-1 columns'>

        <%= yield %>

      </div>
    </div><!--/row-->

    <footer>
      <div class='small-12 columns'>
        <hr>
        <p>&copy; Copyright 2015 - Netsource, LLC</p>
      </div>
    </footer>

    <!-- Javascripts
    ================================================== -->
